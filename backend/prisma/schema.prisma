generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  price       Float
  image       String?
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
}
